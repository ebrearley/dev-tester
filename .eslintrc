{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
  },
  "globals": {
    "__CLIENT__": false,
    "__DEVELOPMENT__": false,
  },
  "plugins": ["import"],
  "rules": {
    "import/no-unresolved": 0,
    "id-length": [2, {"min": 2, "properties": "never", "exceptions": ["_", "i", "j"]}],
    "indent": [2, 2, {"SwitchCase": 1}],
    "max-len": [0],
    "react/jsx-no-bind": 1,
    "react/prop-types": 1,
    "arrow-body-style": [0],
    "react/prefer-stateless-function": 0,
    "no-use-before-define": [2, "nofunc"],
    "global-require": [0]
  },
}
